 <%#= link_to "show all order" , order_path(order.id), :method :patch, class:"btn btn-primary"  %>

<div class="container">
<h3>orders list</h3>
  <%= form_with model: @order do |order| %>
    <%= order.hidden_field :cart_id ,value: @cart.id %>
    <%= order.hidden_field :user_id ,value:current_user.id %>
    <div class="form-group">
      <%= order.label :address%>
      <%= order.text_field :address ,class: "form-control"%>
    </div>
    <div class="form-group">
      <%= order.label :city %>
      <%= order.text_field :city ,class:"form-control"%>
    </div>
    <div class="form-group">
      <%= order.label :state %>
      <%= order.text_field :state ,class: "form-control" %>
    </div>
    <div class="form-group" >
      <%= order.label :total_price %>
      <%= order.text_field :total_price ,class: "form-control" %>
    </div>
    <%= order.submit "submit your order", class:"btn btn-primary" %>
  <% end %>
</div>
<%#= link_to "show all order" , orders_path ,class:"btn btn-primary" %>
