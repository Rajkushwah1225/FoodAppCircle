<% if user = current_user %>
  <div class="container">
    <h1>Orders Details</h1>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Price</th>
          <th>Status</th>
          <th>Order details</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= @orders.index(order) + 1 %></td>
            <td><%= order.address %></td>
            <td><%= order.city %></td>
            <td><%= order.state %></td>
            <td><%= order.total_price %></td>
            <td><%= order.status %></td>
            <% if current_user.admin? %>
              <td><%= link_to "approve", order_orders_confirmed_path(order) , method: :confirmed , class: "btn btn-success" %>
                <td><%= link_to "reject", order_orders_rejected_path(order) ,method: :rejected, class: "btn btn-danger" %></td>
              <% else %>
                <td><%= link_to "Cancel order", order_orders_cancelled_path(order) , method: :cancelled , class: "btn btn-danger" %>
                </td>
              </tr>
            </div>
          <%end%>
        <%end%>
      <%end%>
    <% end %>
