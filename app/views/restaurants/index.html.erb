<h1>All Restaurant</h1>
<%= link_to "Add new Restaurant", new_restaurant_path,class: "btn btn-primary btn-sm" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Actions</th>
      <%# <th> create new restaurant </th> %>
     <%# <th><td><%= link_to "enter new restaurant",,class: "btn btn-primary" %></td></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |rest| %>
      <tr>
        <td><%= rest.name %></td>
        <td><%= rest.description %></td>
        <td><%= rest.address %></td>
       <td class="d-flex">
       <%= link_to "view cuisines",restaurant_cuisines_path(rest), class: "btn btn-primary" %> 
       <%= link_to "update restaurant", edit_restaurant_path(rest),class: "btn btn-primary" %>
       <%= button_to "delete restaurant", restaurant_path(rest), method: :delete,class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
