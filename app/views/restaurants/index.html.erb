
<% if user_signed_in? %>
  <div class="container">
    <h1>All Restaurant</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Restaurant Name</th>
          <th>Description</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.description %></td>
            <td><%= restaurant.address %></td>
            <td class="d-flex">
              <% if current_user.admin? %>
                <%= link_to "view cuisines",restaurant_cuisines_path(restaurant), class:"btn btn- outline-primary mr-1" %>
                <%= link_to "update restaurant", edit_restaurant_path(restaurant), class: "btn btn-outline-primary mr-1" %>
                <%= link_to "delete restaurant", restaurant_path(restaurant), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },method: :delete,class:"btn btn-outline-primary mr-1" %></td>
            <% else %>
              <%= link_to "Menu",restaurant_fooditems_path(restaurant), class: "btn btn-primary" %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <%= will_paginate @restaurants %>
  <div class="text-center">
    <div class="digg_pagination">
      <div class="page_info">
        <%= page_entries_info @restaurants %>
      </div>
    </div>
  </div>
</div>
