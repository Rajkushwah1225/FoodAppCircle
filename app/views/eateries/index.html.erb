<h1>All Eateries</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Description</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <%= @restaurants.each do |eatery| %>
      <tr>
        <td><%= eatery.name %></td>
        <td><%= eatery.description %></td>
        <td><%= eatery.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>


